{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "How many lives are lost yearly",
  "width": 800,
  "height": 500,
  "data": {"url": "https://raw.githubusercontent.com/ndea0002/FIT3179-Asgn2/main/Data/yearlyfatal.csv"},
  "mark": "bar",
   "transform": [
      {
        "calculate": "toNumber(datum.suicides_no)",
        "as": "suicides"
      },
      {
        "calculate": "toNumber(datum.year)",
        "as": "Year"
      }
  ],
  "encoding": {
    "x": {"field": "Year"},
    "y": {"field": "suicides",
    "type": "quantitative",
    "title":"Total fatalities",
    "scale": {"type": "ordinal", "domain" : [0, 260000]}
    } ,
"tooltip": [
{"field": "year", "title": "Year"},
{"field": "suicides_no",   "title" : "Total fatalities"}
]
  }
}
